{
  "name": "naajih-platform",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "lint:fix": "turbo lint:fix",
    "check-lint": "turbo check-lint",
    "export": "turbo export",
    "prepare": "husky",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:all": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -rf node_modules .yarn/cache .yarn/install-state.gz .pnp.* yarn.lock .turbo && find . -type d \\( -name '.next' -o -name 'dist' -o -name 'build' \\) -exec rm -rf '{}' +",
    "deploy": "vercel --prod --cwd apps/user-web --yes"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.3",
    "@repo/typescript-config": "workspace:*",
    "typescript": "5.9.2",
    "husky": "^9.0.11"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.26.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
