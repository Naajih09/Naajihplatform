{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "src/types/merchant.d.ts",
    "src/types/auth.d.ts",
    "src/types/index.d.ts",
    "src/types/document.d.ts",
    "src/types/users.d.ts",
    "../../packages/ui/src/alert.tsx",
    "../../packages/ui/src/avatar.tsx",
    "../../packages/ui/src/badge.tsx",
    "../../packages/ui/src/button.tsx",
    "../../packages/ui/src/card.tsx",
    "../../packages/ui/src/checkbox.tsx",
    "../../packages/ui/src/cmmand.tsx",
    "../../packages/ui/src/controlled-input.tsx",
    "../../packages/ui/src/controlled-select.tsx",
    "../../packages/ui/src/data-table.tsx",
    "../../packages/ui/src/dialog.tsx",
    "../../packages/ui/src/Dropdown-poper.tsx",
    "../../packages/ui/src/dropdown.tsx",
    "../../packages/ui/src/error-boundary-fallback.tsx",
    "../../packages/ui/src/file-upload.tsx",
    "../../packages/ui/src/icons.tsx",
    "../../packages/ui/src/index.tsx",
    "../../packages/ui/src/input.tsx",
    "../../packages/ui/src/key-value-input.tsx",
    "../../packages/ui/src/label.tsx",
    "../../packages/ui/src/multi-select.tsx",
    "../../packages/ui/src/otp-input.tsx",
    "../../packages/ui/src/popover.tsx",
    "../../packages/ui/src/Portals.tsx",
    "../../packages/ui/src/scroll-area.tsx",
    "../../packages/ui/src/select.tsx",
    "../../packages/ui/src/separator.tsx",
    "../../packages/ui/src/sheet.tsx",
    "../../packages/ui/src/sidebar.tsx",
