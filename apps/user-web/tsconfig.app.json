    "../../packages/ui/src/Header.tsx",
    "../../packages/ui/src/menu-generator.ts",
    "src/components/shared/Layouts/merchant-sidebar.tsx",
    "../../packages/ui/src/Setting.tsx",
    "**/*.d.ts"
  ]
}
